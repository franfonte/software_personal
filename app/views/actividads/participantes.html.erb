<body>
  <h1>participantes: Participantes Actividad: <%=Actividad.find(@actividad_id).titulo %></h1>
  <table>
    <thead>
      <tr>
        <th>Usuario</th>
      </tr>
    </thead>
    <tbody>
      <% Solicitud.all.each do |solicitudes| %>
        <tr>
          <%if solicitudes.actividad_id == @actividad_id && solicitudes.estado == true %>
          <td><%= User.find(solicitudes.user_id).name %></td>
          <td><%= button_to "Eliminar Participante", eliminar_participante_path(solicitudes.id)%></td>
          <%end%> 
        </tr>
      <% end %>
    </tbody>
  </table>
</body>